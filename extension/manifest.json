{
  "manifest_version": 3,
  "name": "Briefly",
  "version": "1.0.0",
  "description": "A Chrome extension that helps you read and understand webpages with the power of AI.",
  "icons": {
    "16": "icons/logo16.png",
    "32": "icons/logo32.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "permissions": ["storage", "activeTab", "scripting", "identity"],
  "host_permissions": [
    "https://api.openai.com/*",
    "http://localhost:3000/api/*",
    "https://capstone-2025.coccoc.com/api/*"
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "icons/logo16.png",
      "48": "icons/logo48.png",
      "128": "icons/logo128.png"
    }
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "css": ["styles/content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "sidebar.html",
        "styles/*",
        "components/*",
        "scripts/content.js",
        "components/ContentExtractor.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "oauth2": {
    "client_id": "833310676000-755pdr3r9isck33epnmom0e8v2vfcsvs.apps.googleusercontent.com",
    "facebook_client_id": "684792190680106",
    "scopes": ["openid", "email", "profile"]
  },
  "key": ""
}
